<!DOCTYPE html>
<html>
  <head>
    <title>DiffApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'custom', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'test', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  	<div class="container-fluid">
  		<nav class="navbar navbar-light bg-faded">
		  <%= link_to "Interview App", root_path, class: "navbar-brand" %>
		  <ul class="nav navbar-nav">
		    <li class="nav-item active">
		      <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
		    </li>
		    <li class="nav-item active">
				<%= link_to "Create New Comparison", new_message_path, class: "new-message" %>
		    </li>
		  </ul>
		  <form class="form-inline pull-xs-right">
		    <input class="form-control" type="text" placeholder="Search">
		    <button class="btn btn-primary" type="submit">Search</button>
		  </form>
		</nav>
    	<%= yield %>
    </div>
  </body>
</html>
